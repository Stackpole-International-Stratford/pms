    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Python: Django on 8081",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8081",
                "--noreload"
            ],
            "env": {
                "ALLOWED_HOSTS": "localhost,pmdsdata12,10.4.1.234",
                "DEBUG": "1",
            },
            "django": true,
            "justMyCode": true
        },
